<web-app>
  <display-name>Servlet</display-name>
  <description>Assignment3</description>
  
  <servlet>
    <servlet-name>studentServlet</servlet-name>
    <servlet-class>students.StudentInfoServlet</servlet-class>
    <init-param>
    	<param-name>student_list</param-name>
    	<param-value>/resources/student.txt</param-value>
  	</init-param>
    <load-on-startup>1</load-on-startup>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>studentServlet</servlet-name>
    <url-pattern>/studentServlet</url-pattern>
  </servlet-mapping>

</web-app>